/* components/spu-scroll/index.wxss */
@import "../../wxss/sleeve.wxss";
.container {
    padding: 42rpx 0 34rpx 28rpx;
    background-color: #ffffff;
}

.title {
    width: 694rpx;
}

.scroll {
    display: flex;
    flex-direction: row;
}

.spu-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 60rpx;
}

.price-unit {
    font-size: 24rpx !important;
}

.price-value {
    font-size:26rpx !important;
    font-weight: 800;
}

.spu-img {
    width: 160rpx;
    height: 160rpx;
}

.spu-text {
    width: 160rpx;
    font-size: 20rpx;
    color: #666666;
    margin-top: 29rpx;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
