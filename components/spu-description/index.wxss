/* components/spu-description/index.wxss */
.container {
    display: flex;
    flex-direction: row;
    width: 100%;
    background-color: white;
    padding: 34rpx 30rpx 26rpx 30rpx;
    justify-content: space-between;
    box-sizing: border-box
}

.tags {
    display: flex;
}

.l-tag {
    margin-right: 6rpx !important;
}

.left {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.subtitle {
    font-size: 28rpx;
    font-weight: 400;
    margin-top: 40rpx;
    margin-bottom: 16rpx;
    color: #999999;
}

.price-row {
    display: flex;
    align-items: baseline;
}

.l-price-unit {
    margin-right: 14rpx !important;
}

.discount-price {
    margin-left: 20rpx;
}

.discount-tag {
    position: relative !important;
    bottom: 4rpx;
    width: 50rpx;
    margin-left: 80rpx;
    border-radius: 20rpx !important;
}
.right{
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    width: 78rpx;
    height: 120rpx;
    border-left: 2px dashed #f5f5f5;
}
.inner {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 50rpx;
    height: 120rpx;
    background-color: #DCEBE6 ;
    color: #157658;
    font-size: 20rpx;
}
