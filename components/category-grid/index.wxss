/* components/category_grid/index.wxss */
.container {
    width: 100%;
    height: 320rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.inner-container {
    width: 730rpx;
    height: 300rpx;
    border: 1px dashed #DCEBE6;
}

.grid-item {
    width: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.img {
    width: 60rpx;
    height: 60rpx;
}

.text {
    font-size: 24rpx;
    margin-top: 6rpx;
    color: #333333;
}
