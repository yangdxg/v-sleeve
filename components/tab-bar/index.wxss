/* components/tab-bar/index.wxss */
.container {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100rpx;
    width: 100%;
    background-color: white;
}

.btn-font {
    color: white;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.buy {
    width: 260rpx;
    height: 100%;
    background-color: #157658;
}

.cart {
    background-color: #333333;
    width: 260rpx;
    height: 100%;
}

.icons {
    display: flex;
    flex-direction: row;
    color: #999999;
    height: 100%;
    width: 230rpx;
    justify-content: center;
    align-items: center;
    padding-left: 16rpx;
    padding-right: 22rpx;
    box-sizing: border-box
}

.icons > view:first-child {
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.icons > view:nth-child(2) {
    padding-top: 8rpx;
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.sleeve {
    font-family: sleeve !important;
    color: #157658 !important;
}
