.container {
    display: flex;
    width: 340rpx;
    flex-direction: column;
    box-shadow: 0px 0px 8px rgba(119, 163, 149, 0.2);
    background-color: white;
    margin-bottom: 30rpx;

}

.content-container {
    display: flex;
    flex-direction: column;
    padding: 16rpx 16rpx 22rpx 16rpx;

}

.img {
    width: 340rpx;
    height: 360rpx;
}

.title {
    font-size: 28rpx;
    color: #333333;
}

.tags {
    display: flex;
    flex-direction: row;
    margin-bottom: 8rpx;
    margin-top: 6rpx;
    flex-wrap: wrap;
}

.l-tag {
    height: 32rpx;
    border-radius: 6rpx !important;
    background-color: #dcebe6 !important;
    color: #157658 !important;
    padding-left: 12rpx !important;
    padding-right: 12rpx !important;
    margin-right: 5rpx;
}

.discount-price {
    margin-left: 20rpx;
}

.price-row {
    display: flex;
    flex-direction: row;
}

.subtitle {
    font-size: 24rpx;
    margin-top: 6rpx;
    color: #888;
    font-weight: 300;
}
