/* pages/detail/detail.wxss */
.container {

}

.top {
    width: 100%;
    height: 680rpx;
}

.sku-pending {
    font-size: 20rpx;
    width: 100%;
    height: 80rpx;
    background-color: #ffffff;
    margin: 10rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #333333;
    padding: 0 30rpx;
    box-sizing: border-box
}


.specs > text:first-child {
    color: #999999;
    font-size: 24rpx;
}

.specs > text:nth-child(2) {
    color: #157658;
    font-size: 24rpx;
}

.explain {
    margin-top: 10rpx;
    background-color: white;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.detail-img-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin-bottom: 200rpx;
    background-color: white;
}

.detail-img {
    width: 100%;
}

.tabbar {
    position: fixed;
    bottom: 0;
}
